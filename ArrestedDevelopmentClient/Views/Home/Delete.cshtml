@using ArrestedDevelopmentClient.Models
@model Quote

<div class="modal-message">
  <div>Are you sure you want to delete</div>
  <div class="highlighted">"@Html.DisplayFor(model => model.Text)" by @Html.DisplayFor(model => model.Speaker)?</div>
</div>
<div class="button-area">
  @using (Html.BeginForm("Delete", "Flavors", new { id = @Model.QuoteId }))
  {
    <button class="red" type="submit">Delete</button>
  }
</div>

<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>